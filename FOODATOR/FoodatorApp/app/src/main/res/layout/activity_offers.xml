<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".offers">
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="384dp"
        android:layout_height="363dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="#F6F3D9"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="386dp"
            android:layout_height="34dp"
            android:text="birthday party package"

            android:textColor="#0D0E0E"
            android:textSize="16sp"

            android:textStyle="italic" />


        <ImageView
            android:layout_width="689dp"
            android:layout_height="wrap_content"
            android:src="@drawable/heart"></ImageView>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="380dp"
            android:layout_height="170dp"
            android:background="#F6F3D9"
            app:srcCompat="@drawable/food2" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="224dp"
            android:layout_height="36dp"
            android:text="25% discount"
            android:textColor="#F44336"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="310dp"
            android:layout_height="24dp"
            android:text="evening 7 pm to 11 pm only"
            android:textColor="#0E0D0D"
            android:textStyle="bold" />

        <Button

            android:id="@+id/button8"
            android:layout_width="373dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="view in menu"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="387dp"
        android:layout_height="379dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="#F6F3D9"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="375dp"
            android:layout_height="34dp"
            android:background="#F6F3D9"
            android:text="branch package"
            android:textColor="#0C0C0C"
            android:textSize="16sp"
            android:textStyle="italic" />

        <ImageView
            android:layout_width="689dp"
            android:layout_height="wrap_content"
            android:src="@drawable/heart"></ImageView>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="188dp"
            android:background="#F6F3D9"
            app:srcCompat="@drawable/p1" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="375dp"
            android:layout_height="37dp"
            android:text="buy one get one free"
            android:textColor="#F44336"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="385dp"
            android:layout_height="24dp"
            android:text="sunday only"
            android:textColor="#0E0D0D"
            android:textStyle="bold" />

        <Button

            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="view in menu"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>